<Page x:Class="Lab7.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Lab7.Views.Pages"
      mc:Ignorable="d"
      Title="MainPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center" Content="Hyperlinks:" />
            <TextBlock VerticalAlignment="Center" Margin="5">
                <Hyperlink NavigateUri="BooksPage.xaml">Books</Hyperlink>
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Margin="5">
                <Hyperlink NavigateUri="PublishersPage.xaml">Publishers</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
